@{
    ViewData["StudentAdmin"] = "Test Page";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
@model List<StudentManagerSystem.Models.Test>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../css/test.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
  
    <h2>Class</h2>
    <table class="table table-hover">
    <thead>
        <tr>
            <th>Test ID</th>
            <th>Name</th>
            <th>Academic Year ID</th>
            <th>Course ID</th>
            <th>Subject ID</th>
            <th>Test Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var test in Model) 
        { 
        <tr>
            <td>@test.TestId</td>
            <td>@test.TestName</td>
            <td>@test.AcademicyearId</td>
            <td>@test.CourseId</td>
            <td>@test.SubjectId</td>
            <td>@test.TestDate</td>

                    <td>
                        <a asp-action="EditTest" asp-controller="Admin" asp-route-id="@test.TestId" class="fa-solid fa-arrow-up-from-bracket"></a>
                        <a href="#" data-id="@test.TestId" class="btn btn-sm btn-danger btnDelete">Delete</a>
                    </td>
        </tr>
        }
    </tbody>
    </table>
</body>
</html>