@{
    ViewData["StudentAdmin"] = "Result Page";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
@model List<StudentManagerSystem.Models.Result>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../css//result.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    
    <h2>Result</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>Name</th>
                <th>Subject ID</th>
                <th>Class ID</th>
                <th>Test Score 1st</th>
                <th>Test Score 2nd</th>
                <th>Medium Score</th>
                <th>Final Grade</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model)
            {
                <tr>
                    <td>@result.StudentId</td>
                    <td>@result.Fullname</td>
                    <td>@result.SubjectId</td>
                    <td>@result.ClassId</td>
                    <td>@result.Testscore1st</td>
                    <td>@result.Testscore2nd</td>
                    <td>@result.MediumScore</td>
                    <td>@result.FinalGrade</td>


                    <td>
                        <a asp-action="EditResult" asp-controller="Admin" asp-route-id="@result.StudentId" class="fa-solid fa-arrow-up-from-bracket"></a>
                        <a href="#" data-id="@result.StudentId" class="btn btn-sm btn-danger btnDelete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>