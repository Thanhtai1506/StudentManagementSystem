@{
    ViewData["StudentAdmin"] = "Instructor Page";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
@model List<StudentManagerSystem.Models.Instructor>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../css/instructor.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
   
    <h2>Intrustor</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Instructor ID</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
                <th>Account ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var instructor in Model)
            {
                <tr>
                    <td>@instructor.InstructorId</td>
                    <td>@instructor.Fullname</td>
                    <td>@instructor.Gender</td>
                    <td>@instructor.PhoneNumber</td>
                    <td>@instructor.Email</td>
                    <td>@instructor.Address</td>
                    <td>@instructor.AccountId</td>
                    <td>
                        <a asp-action="EditInstructor" asp-controller="Admin" asp-route-id="@instructor.InstructorId" class="fa-solid fa-arrow-up-from-bracket"></a>
                        <a href="#" data-id="@instructor.InstructorId" class="btn btn-sm btn-danger btnDelete">Delete</a>
                    </td>
                   
                </tr>
            }
        </tbody>
    </table>
</body>
</html>