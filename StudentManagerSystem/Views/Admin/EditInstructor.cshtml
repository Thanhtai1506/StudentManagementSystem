@model StudentManagerSystem.Models.Instructor;
@{
    ViewData["FQA"] = "Home Page";
    Layout = null
    ;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../css/Edit.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
    <form asp-action="EditInstructor" method="post">
        <div class="capnhat">
            <div class="capnhat-con">
              
                <h3>Edit Instructor</h3>
                <ul>
                    <li>

                        <div class="row mb-3 form-group">
                            <label class="col-sm-2 col-form-label control-label" asp-for="InstructorId"></label>
                            <div class="col-sm-10">
                                <input asp-for="InstructorId" class="form-control phone-mask">
                            </div>
                            <span asp-validation-for="InstructorId" class="text-danger"></span>
                        </div>

                        <div class="row mb-3 form-group">
                            <label class="col-sm-2 col-form-label control-label" asp-for="Fullname"></label>
                            <div class="col-sm-10">
                                <input asp-for="Fullname" class="form-control phone-mask">
                            </div>
                            <span asp-validation-for="Fullname" class="text-danger"></span>
                        </div>

                        <div class="row mb-3 form-group">
                            <label class="col-sm-2 col-form-label control-label" asp-for="Gender"></label>
                            <div class="col-sm-10">
                                <input asp-for="Gender" class="form-control phone-mask">
                            </div>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>



                        <div class="row mb-3 form-group">
                            <label class="col-sm-2 col-form-label control-label" asp-for="PhoneNumber"></label>
                            <div class="col-sm-10">
                                <input asp-for="PhoneNumber" class="form-control phone-mask">
                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>



                        <div class="row mb-3 form-group">
                            <label class="col-sm-2 col-form-label control-label" asp-for="Email"></label>
                            <div class="col-sm-10">
                                <input asp-for="Email" class="form-control phone-mask">
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>


                        <div class="row mb-3 form-group">
                            <label class="col-sm-2 col-form-label control-label" asp-for="Address"></label>
                            <div class="col-sm-10">
                                <input asp-for="Address" class="form-control phone-mask">
                            </div>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>


                    </li>
                </ul>

                <button class="btn btn-primary" type="submit"> Save </button>
            </div>
        </div>
    </form>
</body>
</html>