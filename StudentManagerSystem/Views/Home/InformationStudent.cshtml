@{
    ViewData["InformationStudent"] = "Home Page";
    Layout = null ;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/InfomationStudent.css">
    <title>Document</title>
</head>

<body>
    <div class="container_info">
        <!-- header-info -->
        <div class="header_info">
            <div class="header_main">
                <div class="img_student">
                    <img src="../img/img_cat.jpeg" alt="">
                </div>
                <div class="info_student">
                    <h4 class="name_std">
                        @ViewBag.Fullname
                    </h4>
                    <h5>
                        ID: @ViewBag.UserId
                    </h5>
                    <div class="details">
                        <div class="content_detail">
                            <label for="">@ViewBag.Subject</label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- other -->
            <div class="other_detail">
                <!-- left other -->
                <div class="left_other_detail">
                    <div class="content_od">
                        <i class="fa-solid fa-cake-candles"></i>
                        <div class="nameact">
                            <span>Birthday</span>
                            <p>@ViewBag.Birthday</p>
                        </div>
                    </div>

                    <div class="content_od">
                        <i class="fa-solid fa-venus-mars"></i>
                        <div class="nameact">
                            <span>Gender</span>
                            <p>@ViewBag.Gender</p>
                        </div>
                    </div>

                    <div class="content_od">
                        <i class="fa-solid fa-location-dot"></i>
                        <div class="nameact">
                            <span>Address</span>
                            <p>@ViewBag.Address</p>
                        </div>
                    </div>
                </div>
                <!-- right other -->
                <div class="right_other_detail">

                    <div class="content_od">
                        <i class="fa-solid fa-phone"></i>
                        <div class="nameact">
                            <span>Phone</span>
                            <p>@ViewBag.Phone</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="semi">
            <div class="content_semi">
                <p>Related Decision</p>
            </div>
        </div>

        <div class="table_info">
            <div class="content_table">
                <div class="name_table">
                    <span>STUDENT DETAILS</span>
                </div>
                <div class="table_form">
                    <table>
                        <thead>
                            <tr>
                                <th>STUDENT CODE</th>
                                <td>@ViewBag.UserId</td>
                            </tr>

                            <tr>
                                <th>Subject Id</th>
                                <td></td>
                            </tr>

                            <tr>
                                <th>EXPECTED GRADUATION DATE</th>
                                <td></td>
                            </tr>

                            <tr>
                                <th>NAME SCHOOL</th>
                                <td>BTEC FPT</td>
                            </tr>

                        </thead>
                        </tbody>
                    </table>
            </div>
        </div>
    </div>
</body>

</html>